<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.smartemergencymedicalasistance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (dark red) -->
        <item name="colorPrimary">#8B0000</item>
        <item name="colorPrimaryVariant">#600000</item>

        <!-- Secondary brand color (medium blue) -->
        <item name="colorSecondary">#0000CD</item>
        <item name="colorSecondaryVariant">#00008B</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Text input style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Custom TextInputLayout shape -->
    <style name="ShapeAppearanceOverlay.CustomTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Custom Button style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">#8B0000</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Custom Outlined Button style (for secondary actions) -->
    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#0000CD</item>
        <item name="android:textColor">#0000CD</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>